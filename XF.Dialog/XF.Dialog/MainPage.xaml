	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	Title="Xamarin Dialogs sample">

	<StackLayout HorizontalOptions="Center" VerticalOptions="Center">

		<Label
			Padding="30,10,30,10"
			FontSize="Title"
