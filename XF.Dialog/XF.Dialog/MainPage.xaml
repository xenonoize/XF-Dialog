<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="XF.Dialog.MainPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	Title="Xamarin Dialogs sample">

	<StackLayout HorizontalOptions="Center" VerticalOptions="Center">

		<Label
			Padding="30,10,30,10"
			FontSize="Title"
			Text="XF Dialog Samples" />
		<Label
			FontSize="Default"
			HorizontalOptions="Center"
			LineBreakMode="WordWrap"
			Text="Pure Xamarin.Forms based dialogs without renderers" />
		<Button x:Name="BasicDialogSampleBtn" Text="Basic" />
		<Button x:Name="GradientBackgroundDialogSampleBtn" Text="Gradient" />
		<Button x:Name="AnimatedDialogSampleBtn" Text="Custom animation" />
		<Button x:Name="TapToCloseDialogSampleBtn" Text="Tap to Close" />
		<Button x:Name="DisableBackButtonSample" Text="Disabled back button (Android)" />

	</StackLayout>

</ContentPage>
