<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="XF.Dialog.Pages.BasicDialogSample"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Name="Root"
	BackgroundColor="#A3000000">
	<ContentPage.Content>
		<Frame
			Margin="16"
			Padding="16"
			BackgroundColor="White"
			HorizontalOptions="Center"
			VerticalOptions="Center">
			<Grid>
				<Label FontSize="Body" Text="Just a plain 'ol page that looks like a dialog" />
				<Button
					x:Name="CloseBtn"
					Grid.Row="1"
					Text="Close" />
			</Grid>
		</Frame>
	</ContentPage.Content>
</ContentPage>