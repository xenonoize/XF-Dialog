<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="XF.Dialog.BasicDialogSample" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" BackgroundColor="#A3000000">
    <ContentPage.Content>
        <Frame Margin="16" Padding="16"
               BackgroundColor="White" HorizontalOptions="Center"
               VerticalOptions="Center">
            <Grid>
                <Label FontSize="Body" Text="Basic dialog sample" />
                <Button x:Name="CloseBtn" Grid.Row="1"
                        Text="Close" />
            </Grid>
        </Frame>
    </ContentPage.Content>
</ContentPage>